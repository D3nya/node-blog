# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JS
[*.{js,ts,jsx}]
quote_type = single

# Переопределение отступа в каталоге lib
[lib/**.js]
indent_size = 2

# Не переформатируем минифицированные JS и CSS файлы.
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

# JSON, MD, YML
[*.{json,md,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# C#, JAVA, Python
[*.{cpp,cs,gradle,java,kt,py,rs}]
indent_size = 4

# C#
[*.cs]
curly_bracket_next_line = true

# BAT
[*.bat]
end_of_line = crlf
